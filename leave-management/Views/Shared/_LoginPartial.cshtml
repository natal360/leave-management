@using Microsoft.AspNetCore.Identity
@using leave_management.Data
@inject SignInManager<Employee> SignInManager
@inject UserManager<Employee> UserManager

<ul class="nav nav-pills nav-sidebar flex-column ml-2 mt-2">

    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <i class="fas fa fa-user-alt"></i>
                <p>@User.Identity.Name</p>
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white">
                    <i class="fas fa-sign-out-alt"></i>
                    <p class="ml-2">Logout</p>
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">
                <i class="fas fa-registered"></i>
                <p class="ml-2">Register</p>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">
                <i class="fas fa-user"></i>
                <p class="ml-2">Login</p>
            </a>
        </li>
    }
</ul>
